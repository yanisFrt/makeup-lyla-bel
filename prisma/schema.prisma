generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider  = "postgresql"
  url       = env("DATABASE_URL")
  directUrl = env("DIRECT_URL")
}
enum ReservationStatus {
  pending
  accepted
  declined
}
model Reservation {
  id           Int      @id @default(autoincrement())
  nom          String
  phone        String
  email        String?
  type_service String
  adresse      String
  date         String
  hour         String
  other_info   String?
  created_at   DateTime @default(now())
  update_date  DateTime @updatedAt
  status       ReservationStatus @default(pending)
}
model UserProfile {
  id        Int      @id @default(1)
  name      String
  email     String
  phone     String?
  address   String?
  services  Json?
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
}




